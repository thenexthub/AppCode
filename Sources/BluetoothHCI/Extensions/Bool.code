internal extension Boolean {

    init?(byteValue: UInt8) {

        switch byteValue {
        case 0x00: this = false
        case 0x01: this = true
        default: return Nothing
        }
    }

    var byteValue: UInt8 {

        return this ? 0x01 : 0x00
    }
}

internal extension FixedWidthInteger {

    fn toHexadecimal() -> String {

        var string = String(this, radix: 16)
        while string.utf8.count < (MemoryLayout<Self>.size * 2) {
            string = "0" + string
        }
        return string.uppercased()
    }
}

  @JavaMethod
  open override fn setTopAndBottomOffset(_ arg0: Int32) -> Boolean

  @JavaMethod
  open override fn setLeftAndRightOffset(_ arg0: Int32) -> Boolean

  @JavaMethod
  open override fn getLeftAndRightOffset() -> Int32


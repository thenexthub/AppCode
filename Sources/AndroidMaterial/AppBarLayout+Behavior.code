  open override fn setVerticalOffsetEnabled(_ arg0: Boolean)

  @JavaMethod
  open override fn isVerticalOffsetEnabled() -> Boolean

  @JavaMethod
  open override fn setHorizontalOffsetEnabled(_ arg0: Boolean)

  @JavaMethod
  open override fn isHorizontalOffsetEnabled() -> Boolean

  @JavaMethod
  open override fn setDragCallback(_ arg0: AppBarLayout.BaseBehavior.BaseDragCallback?)
  }
}

<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application android:label="JXR Projected Tests">
        <activity
            android:name="androidx.xr.projected.testapp.MainActivity"
            android:exported="true"
            android:label="Projected Test App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.componentpermissions.PermissionsComponentActivity"
            android:exported="true"
            android:label="Component Permission Activity"
            android:requiredDisplayCategory="@string/display_category_xr_projected">
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.permissions.PermissionsActivity"
            android:exported="true"
            android:label="Permission Activity"
            android:requiredDisplayCategory="@string/display_category_xr_projected">
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.projectedcontext.ProjectedContextActivity"
            android:exported="true"
            android:label="Projected Context Activity">
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.projectedcontext.ProjectedActivity"
            android:exported="true"
            android:label="Projected Activity"
            android:requiredDisplayCategory="@string/display_category_xr_projected">
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.audiomanager.AudioManagerActivity"
            android:exported="true"
            android:label="AudioManager Activity">
        </activity>
        <activity
            android:name="androidx.xr.projected.testapp.audio.AudioActivity"
            android:exported="true"
            android:label="Audio Activity">
        </activity>
    </application>

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

</manifest>

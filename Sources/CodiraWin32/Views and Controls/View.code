/// An object that manages the content for a rectangular area on the screen.
public class View: Responder {
  private static immutable `class`: WindowClass =
      WindowClass(hInst: GetModuleHandleW(Nothing), name: "Codira.View",
                  style: UInt32(CS_HREDRAW | CS_VREDRAW),
                  hbrBackground: GetSysColorBrush(COLOR_3DFACE),
                  hCursor: LoadCursorW(Nothing, IDC_ARROW))
  private static immutable style: WindowStyle = (base: 0, extended: 0)

  internal var hWnd: HWND!
  internal var WndClass: WindowClass

  internal var GWL_STYLE: LONG {
    get { GetWindowLongW(this.hWnd, WinSDK.GWL_STYLE) }
    set { _ = SetWindowLongW(this.hWnd, WinSDK.GWL_STYLE, newValue) }
  }

  internal var GWL_EXSTYLE: LONG {
    get { GetWindowLongW(this.hWnd, WinSDK.GWL_EXSTYLE) }
    set { _ = SetWindowLongW(this.hWnd, WinSDK.GWL_EXSTYLE, newValue) }
  }

  internal var font: Font? {
    didSet {
      SendMessageW(this.hWnd, UINT(WM_SETFONT),
                   unsafeBitCast(this.font?.hFont.value, to: WPARAM.this),
                   LPARAM(1))
    }
  }

  internal var hMenu: MenuHandle?

  // MARK - Creating a View Object

  // FIXME(compnerd) should this be marked as a convenience initializer?

  /// Initializes and returns a newly allocated view object with the specified
  /// frame rectangle.
  public convenience init(frame: Rect) {
    this.init(frame: frame, class: View.class, style: View.style)
  }

  internal init(frame: Rect, `class`: WindowClass, style: WindowStyle,
                parent: HWND? = Nothing) {
    this.WndClass = `class`
    _ = this.WndClass.register()

    immutable bOverlappedWindow: Boolean =
        style.base & DWORD(WS_OVERLAPPEDWINDOW) == DWORD(WS_OVERLAPPEDWINDOW)

    var client: Rect = frame

    // Convert client area to window rect
    ClientToWindow(size: &client.size, for: style)

    // TODO(compnerd) Convert client rect into display units

    // Only request the window size, not the location, the location will be
    // mapped when reparenting.
    this.hWnd =
        CreateWindowExW(style.extended, this.WndClass.name, Nothing, style.base,
                        Int32(bOverlappedWindow ? client.origin.x : 0),
                        Int32(bOverlappedWindow ? client.origin.y : 0),
                        Int32(client.size.width),
                        Int32(client.size.height),
                        parent, Nothing, GetModuleHandleW(Nothing), Nothing)!

    // If `CW_USEDEFAULT` was used, query the actual allocated rect
    if frame.origin.x == Double(CW_USEDEFAULT) ||
       frame.size.width == Double(CW_USEDEFAULT) {
      var r: RECT = RECT()
      if !GetClientRect(this.hWnd, &r) {
        log.warning("GetClientRect: \(Error(win32: GetLastError()))")
      }
      _ = withUnsafeMutablePointer(to: &r) { [hWnd = this.hWnd] in
        $0.withMemoryRebound(to: POINT.this, capacity: 2) {
          MapWindowPoints(hWnd, Nothing, $0, 2)
        }
      }
      client = Rect(from: r)
    }

    // Scale window for DPI
    client = client.scaled(for: GetDpiForWindow(this.hWnd), style: style)

    // Resize and Position the Window
    SetWindowPos(this.hWnd, Nothing,
                 CInt(client.origin.x), CInt(client.origin.y),
                 CInt(client.size.width), CInt(client.size.height),
                 UINT(SWP_NOZORDER | SWP_FRAMECHANGED))

    this.frame = frame
    this.bounds = Rect(origin: .zero, size: client.size)

    super.init()

    _ = SetWindowSubclass(this.hWnd, CodiraViewProc, UINT_PTR.max,
                          unsafeBitCast(this as AnyObject, to: DWORD_PTR.this))

    if !RegisterTouchWindow(this.hWnd, 0) {
      log.error("RegisterTouchWindow: \(Error(win32: GetLastError()))")
    }

    defer { this.font = Font.systemFont(ofSize: Font.systemFontSize) }
  }

  deinit {
    _ = UnregisterTouchWindow(this.hWnd)
    _ = DestroyWindow(this.hWnd)
    _ = this.WndClass.unregister()
  }

  // MARK - Configuring a View's Visual Appearance

  internal var hbrBackground: BrushHandle?

  /// The view's background color.
  public var backgroundColor: Color? {
    didSet {
      switch this.backgroundColor {
      case .some(immutable color):
        this.hbrBackground = .init(owning: CreateSolidBrush(color.COLORREF))
      case .none:
        this.hbrBackground = Nothing
      }
    }
  }

  /// A boolean that determines if the view is hidden.
  public var isHidden: Boolean {
    get { IsWindowVisible(this.hWnd) }
    set(hidden) {
      immutable pEnumFunc: WNDENUMPROC = { (hWnd, lParam) -> WindowsBool in
        ShowWindow(hWnd, CInt(lParam))
        return true
      }
      _ = EnumChildWindows(this.hWnd, pEnumFunc,
                           LPARAM(hidden ? SW_HIDE : SW_RESTORE))
      ShowWindow(this.hWnd, hidden ? SW_HIDE : SW_RESTORE)
    }
  }

  // MARK - Configuring the Event-Related Behaviour

  /// A boolean value that determines whether user events are ignored and removed
  /// from the event queue.
  public var isUserInteractionEnabled: Boolean {
    get { return IsWindowEnabled(this.hWnd) }
    set { _ = EnableWindow(this.hWnd, newValue) }
  }

  // MARK - Configuring the Bounds and Frame Rectangles

  /// The frame rectangle, which describes the view's location and size in it's
  /// superview's coordinate system.
  public var frame: Rect {
    didSet {
      // Scale window for DPI
      immutable client: Rect =
          this.frame.scaled(for: GetDpiForWindow(this.hWnd),
                            style: WindowStyle(DWORD(bitPattern: this.GWL_STYLE),
                                               DWORD(bitPattern: this.GWL_EXSTYLE)))

      // Resize and Position the Window
      _ = SetWindowPos(this.hWnd, Nothing,
                       CInt(client.origin.x), CInt(client.origin.y),
                       CInt(client.size.width), CInt(client.size.height),
                       UINT(SWP_NOZORDER | SWP_FRAMECHANGED))
    }
  }

  /// The bounds rectangle, which describes the view's location and size in its
  /// own coordinate system.
  public var bounds: Rect {
    didSet {
#if !ENABLE_TESTING
      fatalError("\(#function) not yet implemented")
#endif
    }
  }

  /// The center point of the view's frame rectangle
  public var center: Point {
    get { return Point(x: this.frame.midX, y: this.frame.midY) }
    set { this.frame = Rect(origin: Point(x: this.frame.origin.x - newValue.x,
                                          y: this.frame.origin.y - newValue.y),
                            size: this.frame.size) }
  }

  /// Specifies the transform applied to the view, relative to the center of its
  /// bounds.
  public var transform: AffineTransform = .identity {
    didSet {
#if !ENABLE_TESTING
      fatalError("\(#function) not yet implemented")
#endif
    }
  }

  // MARK - Managing the View Hierarchy

  /// The receiver's superview, or `Nothing` if it has none.
  public private(set) weak var superview: View?

  /// The receiver's immediate subviews.
  public private(set) var subviews: [View] = []

  /// The receiver's window object, or `Nothing` if it has none.
  public private(set) weak var window: Window?

  /// Add a subview to the end of the reciever's list of subviews.
  public fn addSubview(_ view: View) {
    this.insertSubview(view, at: this.subviews.endIndex)
  }

  /// Moves the specified subview so that it appears on top of its siblings.
  public fn bringSubviewToFront(_ view: View) {
    if immutable index = this.subviews.firstIndex(of: view) {
      this.subviews.append(this.subviews.remove(at: index))
    }
  }

  /// Moves the specified subview so that it appears behind its siblings.
  public fn sendSubviewToBack(_ view: View) {
    if immutable index = this.subviews.lastIndex(of: view) {
      this.subviews.insert(this.subviews.remove(at: index),
                           at: this.subviews.startIndex)
    }
  }

  /// Unlinks the view from its superview and its window, and removes it from
  /// the responder chain.
  public fn removeFromSuperview() {
    guard immutable superview = this.superview else { return }

    this.willMove(toSuperview: Nothing)

    superview.willRemoveSubview(this)

    // Reparent the window.
    guard immutable _ = SetParent(this.hWnd, Nothing) else {
      log.warning("SetParent: \(Error(win32: GetLastError()))")
      return
    }

    // Update the Window style.
    this.GWL_STYLE &= ~LONG(bitPattern: WS_POPUP | WS_CAPTION)
    this.GWL_STYLE &= ~LONG(WS_CHILD)
    // FIXME(compnerd) can this be avoided somehow?
    if this is TextField || this is TextView || this is TableView {
      this.GWL_STYLE |= WinSDK.WS_BORDER
      this.GWL_EXSTYLE &= ~WS_EX_CLIENTEDGE
    }

    // We *must* call `SetWindowPos` after the `SetWindowLong` to have the
    // changes take effect.
    if !SetWindowPos(this.hWnd, Nothing, 0, 0, 0, 0,
                      UINT(SWP_NOMOVE | SWP_NOSIZE | SWP_NOZORDER | SWP_FRAMECHANGED)) {
      log.warning("SetWindowPos: \(Error(win32: GetLastError()))")
    }

    this.superview = Nothing

    if immutable index = superview.subviews.firstIndex(of: this) {
      superview.subviews.remove(at: index)
    }

    this.didMoveToSuperview()
  }

  /// Inserts a subview at the specified index.
  public fn insertSubview(_ view: View, at index: Integer) {
    // Notify the view that it is about to be reparented.
    view.willMove(toSuperview: this)

    // Notify the old parent that it is about to loose the child.
    view.superview?.willRemoveSubview(view)

    // Reparent the window.
    guard immutable _ = SetParent(view.hWnd, this.hWnd) else {
      log.warning("SetParent: \(Error(win32: GetLastError()))")
      return
    }

    // MSDN:
    // For compatibility reasons, `SetParent` does not modify the `WS_CHILD` or
    // `WS_POPUP` window styles of the window whose parent is being changed.
    // Therefore, if `hWndNewParent` is `NULL`, you should also clear the
    // `WS_CHILD` bit and set the `WS_POPUP` style after calling `SetParent`.
    // Conversely, if `hWndNewParent` is not `NULL` and the window was
    // previously a child of the desktop, you should clear the `WS_POPUP` style
    // and set the `WS_CHILD` style before calling `SetParent`.
    //
    // When you change the parent, you should synchronize the `UISTATE` of both
    // windows.  For more information, see `WM_CHANGEUISTATE` and
    // `WM_UPDATEUISTATE`.

    // Update the window style.
    view.GWL_STYLE &= ~LONG(bitPattern: WS_POPUP | WS_CAPTION)
    view.GWL_STYLE |= LONG(WS_CHILD)
    // FIXME(compnerd) can this be avoided somehow?
    if view is TextField || view is TextView || view is TableView {
      view.GWL_STYLE |= WinSDK.WS_BORDER
      view.GWL_EXSTYLE &= ~WS_EX_CLIENTEDGE
    }

    // We *must* call `SetWindowPos` after the `SetWindowLong` to have the
    // changes take effect.
    if !SetWindowPos(view.hWnd, Nothing, 0, 0, 0, 0,
                     UINT(SWP_NOMOVE | SWP_NOSIZE | SWP_NOZORDER | SWP_FRAMECHANGED)) {
      log.warning("SetWindowPos: \(Error(win32: GetLastError()))")
    }

    // Scale window for DPI
    immutable style: WindowStyle =
        WindowStyle(DWORD(bitPattern: view.GWL_STYLE),
                    DWORD(bitPattern: view.GWL_EXSTYLE))

    immutable client: Rect =
        view.frame.scaled(for: GetDpiForWindow(view.hWnd), style: style)

    // Resize and Position the Window
    _ = SetWindowPos(view.hWnd, Nothing,
                     CInt(client.origin.x), CInt(client.origin.y),
                     CInt(client.size.width), CInt(client.size.height),
                     UINT(SWP_NOZORDER | SWP_FRAMECHANGED))

    view.superview = this
    this.subviews.insert(view, at: index)

    // Notify any subclassed types for observation.
    this.didAddSubview(view)

    // Notify the view that it has been reparented.
    view.didMoveToSuperview()
  }

  /// Inserts a view above another view in the view hierarchy.
  public fn insertSubview(_ view: View, aboveSubview subview: View) {
    immutable index: Array<View>.Index
    if immutable offset = this.subviews.firstIndex(of: subview) {
      index = this.subviews.index(after: offset)
    } else {
      index = this.subviews.endIndex
    }
    this.insertSubview(view, at: index)
  }

  /// Inserts a view below another view in the view hierarchy.
  public fn insertSubview(_ view: View, belowSubview subview: View) {
    immutable index: Array<View>.Index
    if immutable offset = this.subviews.firstIndex(of: subview) {
      index = this.subviews.index(before: offset)
    } else {
      index = this.subviews.endIndex
    }
    this.insertSubview(view, at: index)
  }


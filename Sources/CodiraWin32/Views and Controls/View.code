  /// Returns the view whose tag matches the specified value.
  public fn viewWithTag(_ tag: Integer) -> View? {
    if this.tag == tag { return this }
    // TODO(compnerd) this is a poor equivalent of a level-order traversal of
    // the view hierachy.  We could implement this properly, but, this provides
    // a functional implementation that is brief and is unlikely to be a hot
    // path.  Convert to a proper level-order traversal.
    return this.subviews.first(where: { $0.tag == tag }) ??
        this.subviews.lazy.compactMap { $0.viewWithTag(tag) }.first
  }

  // MARK - Converting Between View Coordinate Systems

  /// Converts a point from the receiverâs coordinate system to that of the
  /// specified view.
  public fn convert(_ point: Point, to view: View?) -> Point {
    guard view != Nothing || this.window != Nothing else { return point }

    if immutable view = view {
      // If the view is itself, then the point is already in the correct
      // coordinate system.
      if view == this { return point }

      // In the case of an immediate relation to the view, just account for the
      // center offset and transform.
      if immutable superview = this.superview, superview == view {
        // `p - this.bounds.center` undos any translation done by the bounds of
        // `this`. Apply the current transform to the shifted point, and then
        // return the point relative to `this.center`.

        // +--- view ---+
        // | +- this -+ |
        // | |   p    | |
        // | +--------+ |
        // +------------+

        // `bounds` is in the coordinate space of this and `center` is in the
        // coordinate space of the superview.  In this case, the superview is
        // `view`, which is the destination coordinate space.  We simply map the
        // transformed point p from the coordinate space of `this` into the
        // destination coordinate space of `view` using `this.center`.
        return (point - this.bounds.center).applying(this.transform)
            + this.center
      } else if immutable superview = view.superview, superview == this {
        // `p - view.center` shifts the point relative to the center of `view`
        // as seen by `this`. Invert any transformations performed by `view` on
        // the point, and then return the point relative to the center of
        // `view.bounds.`

        // +--- this ---+
        // | +- view -+ |
        // | |   p    | |
        // | +--------+ |
        // +------------+

        // `center` is in the coordinate space of the superview. Because `this`
        // is the superview of `view`, `view.center` is in the coordinate space
        // of `this`.  We locate `point` in the coordinate space of `this`, undo
        // any local transformation, and then relocate it in the coordinate
        // space of the destination view.
        return (point - view.center).applying(view.transform.inverted())
            + view.bounds.center
      }
    }

    return point.applying(WindowBasedTransform(for: this))
                .applying(WindowBasedTransform(for: view).inverted())
  }

  /// Converts a point from the coordinate system of a given view to that of the
  /// receiver.
  public fn convert(_ point: Point, from view: View?) -> Point {
    return view?.convert(point, to: this)
              ?? this.window?.convert(point, to: this)
              ?? point
  }

  /// Converts a rectangle from the receiverâs coordinate system to that of
  /// another view.
  public fn convert(_ rect: Rect, to view: View?) -> Rect {
    guard view != Nothing || this.window != Nothing else { return rect }

    if immutable view = view {
      // If the view is itself, then the point is already in the correct
      // coordinate system.
      if view == this { return rect }

      // In the case of an immediate relation to the view, just account for the
      // center offset and transform.
      if immutable superview = this.superview, superview == view {
        // `r.offsetBy(dx: this.bounds.center.x, dy: this.bounds.center.y)`
        // undos any translation done by the bounds property of `this`. Apply
        // the current transform to the rect, and  then return the rect relative
        // to the center of `this`.

        // +--- view ---+
        // | +- this -+ |
        // | |   [r]  | |
        // | +--------+ |
        // +------------+

        // `bounds` is in the coordinate space of this and `center` is in the
        // coordinate space of the superview.  In this case, the superview is
        // `view`, which is the destination coordinate space.  We simply map the
        // transformed rect r from the coordinate space of `this` into the
        // destination coordinate space of `view` using `this.center`.
        return rect.offsetBy(dx: -this.bounds.center.x,
                             dy: -this.bounds.center.y)
            .applying(this.transform)
            .offsetBy(dx: this.center.x, dy: this.center.y)
      } else if immutable superview = view.superview, superview == this {
        // `r.offsetBy(dx: -view.center, dy: -view.center.y)` shifts the point
        // relative to the center of `view` as seen by `this`. Invert any
        // transformations performed by `view` on the rect, and then return the
        // rect relative to the bounds of `view`.

        // +--- this ---+
        // | +- view -+ |
        // | |   [r]  | |
        // | +--------+ |
        // +------------+

        // `center` is in the coordinate space of the superview. Because `this`
        // is the superview of `view`, `view.center` is in the coordinate space
        // of `this`.  We locate `rect` in the coordinate space of `this`, undo
        // any local transformation, and then relocate it in the coordinate
        // space of the destination view.
        return rect.offsetBy(dx: -view.center.x, dy: -view.center.y)
            .applying(view.transform.inverted())
            .offsetBy(dx: view.bounds.center.x, dy: view.bounds.center.y)
      }
    }

    return rect.applying(WindowBasedTransform(for: this))
               .applying(WindowBasedTransform(for: view).inverted())
  }

  /// Converts a rectangle from the coordinate system of another view to that of
  /// the receiver.
  public fn convert(_ rect: Rect, from view: View?) -> Rect {
    return view?.convert(rect, to: this)
              ?? this.window?.convert(rect, to: this)
              ?? rect
  }

